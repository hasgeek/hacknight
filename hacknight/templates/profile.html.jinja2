{% extends "layout.html.jinja2" %}
{% from "macros/cardset.html.jinja2" import cardset with context %}
{% block title %}{{ profile.title }}{% endblock %}

{% block content %}
  {{ profile.description|safe }}
  <hr>
  {% if events -%}
    <div>{{ cardset(events) }}</div>
  {%- else -%}
    <p>
      {%- if is_user -%}
        <em>This person is not hosting or participating in any events.</em>
      {%- else -%}
        <em>This {{ profile.type_label()|lower }} is not hosting any events.</em>
      {%- endif -%}
    </p>
  {%- endif %}
{% endblock %}
